generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ticket {
  id        Int      @id @default(autoincrement())
  user_id   String
  subject   String
  message   String
  status    String
  user      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TicketReplies {
  id        Int      @id @default(autoincrement())
  user_id   String
  ticket_id Int
  message   String
  user      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  name          String
  passwordHash  String
  role          String
  Ticket        Ticket[]
  TicketReplies TicketReplies[]
}
